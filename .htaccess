# .htaccess — Render.com 2025 (works 100%)
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Serve real files/folders directly
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # Route everything else to index.php with ?url=...
    RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]
</IfModule>

# ──────────────────────────────
# CORS & Security headers (only works if mod_headers is enabled)
# ──────────────────────────────
<IfModule mod_headers.c>
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With, X-User"
    Header always set Access-Control-Allow-Credentials "true"
</IfModule>